doctype
html(lang="en")
    head
        include layout/head
    body
        include layout/navbar
        center
            .row
                .col-md-4.col-md-offset-4.login-container
                    .login-panel
                        form.signin-form(method="post",action="/admin/login")
                            input(type="hidden", name="_csrf", value="#{_csrf.token}")
                            input.form-control(type="text",name="username",placeholder="Email")
                            input.form-control(type="password",name="password",placeholder="Password")
                            .checkbox
                                label
                                    input.form-control(type="checkbox",name="remeberme") rememberme
                            button.btn.btn-primary.btn-block(type="submit") Login
